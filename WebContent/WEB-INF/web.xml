<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Task1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>startPage.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>SearchFilter</filter-name>
    <filter-class>main.java.controller.filters.SearchResultsFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>AddressChecker</filter-name>
 	<filter-class>main.java.controller.filters.WrongAdressesFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SearchFilter</filter-name>
    <url-pattern>/searchResults.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AddressChecker</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>